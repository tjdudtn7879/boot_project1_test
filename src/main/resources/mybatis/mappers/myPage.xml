<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boot.dao.MyPageDAO">
    <select id="list" resultType="com.boot.dto.MyPageDTO">
        select cv_no from cv
    </select>
				
    <select id="contentView" resultType="com.boot.dto.MyPageDTO">
        select cv_no from cv where user_id=#{user_id}
    </select>
    
    <delete id="delete">
		delete from cv_no where boardNo=#{cv_no}
    </delete>
    
    <update id="modify">
		update <!--회원테이블이름--> set user_pw=#{user_pw}, user_phone=#{user_phone}, user_email=#{user_email}, user_address=#{user_address} where user_id=#{user_id}
    </update>
    
</mapper>












